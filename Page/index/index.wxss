.UCenter-bg {
    background-image: url(https://whusu.oss-cn-shanghai.aliyuncs.com/media/view/miniPg/IndexBg-2.jpg);/*https://image.weilanwl.com/color2.0/index.jpg*/
    background-size: cover;
    height: 450rpx;
    display: flex;
    justify-content: center;
    padding-top: 40rpx;
    overflow: hidden;
    position: relative;
    flex-direction: column;
    align-items: center;
    color: #fff;
    font-weight: 300;
    text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

button {
  font-size: 28rpx;
  background-color: #fff;
  border: none;
  padding: 0;
  margin: 0;
}

button::after {
  border: none;
}

#qrcode_box {
    position: absolute;
    left: 680rpx;
    top: 295rpx;
}
.UCenter-bg text {
    opacity: 0.9;
    text-shadow:2px 2px 8px #ff3300;
}

.UCenter-bg image {
    width: 200rpx;
    height: 200rpx;
}

.UCenter-bg .gif-wave{
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;
    height: 100rpx;
}

map,.mapBox{
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;
    height: 100rpx;
}

map,.mapBox{
    width: 750rpx;
    height: 300rpx;
}
.margin-top-sm text-xl{
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
}
.text00{
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: center;
}
.userinfo-avatar {
  width: 75rpx;
  height: 75rpx;
  margin: 10rpx;
  border-radius: 70%;
}